{
  "name": "react-textarea-enhanced",
  "version": "1.3.0",
  "description": "A React textarea component with Twitter-like features including character limits, entity highlighting, and auto-expansion",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run copy-css",
    "copy-css": "cp src/style/index.css dist/",
    "re-order": "cp dist/components/* dist/ && rm -rf dist/components",
    "p:dev": "tsc --watch",
    "dev": "vite",
    "p:build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "q": "rm -rf dist react-textarea-enhanced-1.3.0.tgz && npm run build && npm pack && npm uninstall react-textarea-enhanced && npm install react-textarea-enhanced-1.3.0.tgz"
  },
  "dependencies": {
    "react-textarea-enhanced": "file:react-textarea-enhanced-1.3.0.tgz",
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/twitter-text": "^3.1.10",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "keywords": [
    "react",
    "textarea",
    "twitter",
    "character-limit",
    "entity-highlighting",
    "hashtag",
    "mention",
    "url",
    "typescript",
    "component"
  ],
  "author": "Ojutalayo Ayomide Josiah",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ojutalayomi/textarea.git"
  },
  "bugs": {
    "url": "https://github.com/ojutalayomi/textarea/issues"
  },
  "homepage": "https://github.com/ojutalayomi/textarea#readme"
}
