{
  "name": "react-textarea-enhanced",
  "version": "1.0.2",
  "description": "A React textarea component with Twitter-like features including character limits, entity highlighting, and auto-expansion",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run copy-css",
    "copy-css": "cp src/style/index.css dist/",
    "dev": "tsc --watch",
    "test": "react-scripts test",
    "prepublishOnly": "npm run build",
    "start": "react-scripts start",
    "run:build": "react-scripts build",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "twitter-text": "^3.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/twitter-text": "^3.1.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.4",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "react",
    "textarea",
    "twitter",
    "character-limit",
    "entity-highlighting",
    "hashtag",
    "mention",
    "url",
    "typescript",
    "component"
  ],
  "author": "Ojutalayo Ayomide Josiah",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ojutalayomi/textarea.git"
  },
  "bugs": {
    "url": "https://github.com/ojutalayomi/textarea/issues"
  },
  "homepage": "https://github.com/ojutalayomi/textarea#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
